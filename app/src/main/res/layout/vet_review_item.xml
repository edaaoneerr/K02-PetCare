<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/rounded_corners"
    android:orientation="horizontal"
    android:layout_marginVertical="15dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/reviewerProfileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/image_shape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emily Anderson"
        android:textAppearance="?attr/textAppearanceListItem" />

        <RatingBar
            android:id="@+id/reviewRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:progressTint="@color/yellow"
            android:numStars="5"
            android:rating="4.5"
            android:isIndicator="true"
            android:stepSize="0.1" />


        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Dr. Patel is a true professional who genuinely cares about his patients. I highly recommend Dr. Patel to"
            android:textSize="16sp"
            app:trimLength="130"
            app:trimCollapsedText="View More"
            app:trimExpandedText="View Less"
            app:showTrimExpandedText="true"
            app:colorClickableText="@color/pet" />
    </LinearLayout>
    </LinearLayout>
