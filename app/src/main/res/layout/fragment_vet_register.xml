<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="viewModel"
        type="com.example.petcareproject.viewmodels.AuthViewModel" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".views.authview.VetRegisterFragment">

    <TextView
        android:id="@+id/welcomingMessage"
        android:layout_width="366dp"
        android:layout_height="122dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Create New\nAccount"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomingCareMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomingCareMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins"
        android:text="Be careful when saving your information. This information will be sent to admin directly to check if real to confirm you are a veterinarian."
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@+id/fullNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomingMessage" />

    <EditText
        android:id="@+id/fullNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Tam Adı ve Soyadı"
        android:textCursorDrawable="@drawable/purple_cursor"
        android:paddingStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/nationalIdNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomingCareMessage" />

    <!--<EditText
        android:id="@+id/nationalIdNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="TC Kimlik No"
        android:textColor="@color/pet"
        android:textCursorDrawable="@{viewModel.cursorDrawable}"
        android:paddingStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/registeredVetClinic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameText" />-->

    <EditText
        android:id="@+id/registeredVetClinic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/pet"
        android:hint="Çalıştığınız Klinik İsmi"
        android:paddingStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/purple_cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameText" />

    <TextView
        android:id="@+id/vetAttachIdText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins"
        android:text="Please attach your National Veterinarian ID card for confirmation."
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registeredVetClinic" />

    <LinearLayout
        android:id="@+id/attachVetIdButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_shape"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/vetAttachIdText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to Upload File"
            android:textColor="@color/dark_grey"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/vetAttachedFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="img.png"
        android:visibility="invisible"
        android:textColor="@color/dark_grey"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/attachVetIdButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical|center_horizontal"/>
    <ImageButton
        android:id="@+id/fileCancelButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cancel"
        app:tint="@color/dark_grey"
        android:visibility="invisible"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/vetAttachedFileName"
        app:layout_constraintTop_toBottomOf="@id/attachVetIdButton"
        />




    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="14dp"
        android:text="Register"
        android:textSize="16sp"
        android:textStyle="bold"
        android:allowClickWhenDisabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/policyCheckbox"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="5dp"
        android:text="@string/policy"
        android:textSize="12sp"
        android:gravity="top"
        android:buttonTint="@color/grey"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
