<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="viewModel"
        type="com.example.petcareproject.viewmodel.AuthViewModel" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".view.authview.VetRegisterFragment">

    <TextView
        android:id="@+id/welcomingMessage"
        android:layout_width="366dp"
        android:layout_height="122dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Create New\nAccount"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomingCareMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomingCareMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins"
        android:text="Each act of care for our pets mirrors the deep bond we share, echoing their unconditional love."
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@+id/fullNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomingMessage" />

    <EditText
        android:id="@+id/fullNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Full Name"
        android:textCursorDrawable="@drawable/purple_cursor"
        android:inputType="textPersonName"
        android:paddingStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/emailText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomingCareMessage" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Email"
        android:textColor="@color/pet"
        android:textCursorDrawable="@{viewModel.cursorDrawable}"
        android:inputType="textEmailAddress"
        android:paddingStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/passwordText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameText" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/pet"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/purple_cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />


    <LinearLayout
        android:id="@+id/warningLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/warning"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:background="@drawable/warning" />
        <TextView
            android:id="@+id/passwordErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins"
            android:text="Required Fields"
            android:visibility="gone"
            android:textColor="@color/alert"
            android:textSize="12sp" />
    </LinearLayout>



    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="14dp"
        android:text="Get Started"
        android:textSize="16sp"
        android:textStyle="bold"
        android:allowClickWhenDisabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/policyCheckbox"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="5dp"
        android:text="@string/policy"
        android:textSize="12sp"
        android:gravity="top"
        android:buttonTint="@color/grey"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toBottomOf="@id/googleButtonLayout"
        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
