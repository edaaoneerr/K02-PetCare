<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vetImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        tools:srcCompat="@tools:sample/avatars[6]"
        android:background="@drawable/image_shape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/vetRatingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RatingBar
            android:id="@+id/vetRatingStar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:isIndicator="false"
            android:numStars="1"
            android:progressTint="@color/yellow"
            android:rating="1"
            android:secondaryProgressTint="@android:color/transparent"
            android:stepSize="0.1" />
        <TextView
            android:id="@+id/vetRating"
            android:text="4.8"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/vetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Wilson"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        />
    <TextView
        android:id="@+id/vetSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardiology"
        android:textSize="12sp"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:id="@+id/vetDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/poppins"
        android:text="Distance"
        />


</LinearLayout>