<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/image_shape"
    android:elevation="3dp"
    android:clickable="true"
    android:layout_marginHorizontal="22dp"
    android:layout_marginVertical="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vetClinicImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        tools:srcCompat="@tools:sample/avatars"
        android:background="@drawable/image_shape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vetClinicLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/vetClinicImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vetClinicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="John Wilson"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/vetClinicLayout"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ToggleButton
            android:id="@+id/button_favorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_favourite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>

        <RelativeLayout
            android:id="@+id/vetSpecialtyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            app:layout_constraintTop_toBottomOf="@id/vetClinicName"
            app:layout_constraintStart_toStartOf="@id/vetClinicLayout">

            <ImageView
                android:id="@+id/vetSpecialtyIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:tint="@color/pet"
                android:layout_centerVertical="true"
                android:src="@drawable/paw_icon" />
            <TextView
                android:id="@+id/vetClinicSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins"
                android:text="Cardiology"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vetDistanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vetSpecialtyLayout"
            app:layout_constraintStart_toStartOf="@id/vetClinicLayout">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                app:tint="@color/green"
                android:src="@drawable/location_pin_icon" />

            <TextView
                android:id="@+id/vetClinicDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/poppins"
                android:text="Distance"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/vetClinicRatingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:layout_constraintTop_toBottomOf="@id/vetDistanceLayout"
            app:layout_constraintStart_toStartOf="@id/vetClinicLayout">
            <ImageView
                android:id="@+id/vetClinicRatingStar"
                android:layout_height="15dp"
                android:layout_width="15dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star_icon"/>
            <TextView
                android:id="@+id/vetClinicRating"
                android:text="4.8"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
