<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/image_shape"
    android:layout_margin="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vetClinicImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars[6]"
        android:background="@drawable/image_shape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vetClinicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
        <TextView
            android:id="@+id/vetClinicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="John Wilson"

            android:fontFamily="@font/poppins_bold"
            android:textSize="14dp"
            />
        <LinearLayout
            android:id="@+id/vetClinicRatingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/vetClinicRatingStar"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/star_icon"/>
        <TextView
            android:id="@+id/vetClinicRating"
            android:text="4.8"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/vetClinicSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardiology"
        android:layout_margin="2dp"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/location_pin_icon" />

            <TextView
                android:id="@+id/vetClinicDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Distance"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"

                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
