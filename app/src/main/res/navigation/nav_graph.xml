<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">
    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.example.petcareproject.view.greetingview.GetStartedFragment"
        android:label="GetStartedFragment">
        <action
            android:id="@+id/action_getStartedFragment_to_getStartedFragment2"
            app:destination="@id/getStartedFragment2" />
    </fragment>
    <fragment
        android:id="@+id/getStartedFragment2"
        android:name="com.example.petcareproject.view.greetingview.GetStartedFragment2"
        android:label="fragment_get_started2"
        tools:layout="@layout/fragment_get_started2" >
        <action
            android:id="@+id/action_getStartedFragment2_to_getStartedFragment3"
            app:destination="@id/getStartedFragment3" />
    </fragment>
    <fragment
        android:id="@+id/getStartedFragment3"
        android:name="com.example.petcareproject.view.greetingview.GetStartedFragment3"
        android:label="fragment_get_started3"
        tools:layout="@layout/fragment_get_started3" >
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.petcareproject.view.authview.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.petcareproject.view.greetingview.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboardingFragment_to_getStartedFragment"
            app:destination="@id/getStartedFragment" />
        <action
            android:id="@+id/action_onboardingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.petcareproject.view.authview.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_vetRegisterFragment"
            app:destination="@id/vetRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.petcareproject.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/vetRegisterFragment"
        android:name="com.example.petcareproject.view.authview.VetRegisterFragment"
        android:label="fragment_vet_register"
        tools:layout="@layout/fragment_vet_register" >
        <action
            android:id="@+id/action_vetRegisterFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>